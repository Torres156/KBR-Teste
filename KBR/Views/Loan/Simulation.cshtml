@model SimulateModel

@{
}

<div class="box">
    <div class="box-dados">
        <a href="/loan/" title="Voltar" class="btn btn-dark">Voltar</a>
    </div>
</div>

<div class="card mt-2">
    <div class="card-body">
        <h3>Simulação</h3>        
        <p>Quantia de parcelas: <strong>@Model.QuotaCount</strong></p>
        <table class="table table-sm mt-2">
            <thead>
                <tr>
                    <th scope="col">Parcela</th>
                    <th scope="col">Valor</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.QuotaValue.Count; i++)
                {
                    <tr>
                        <th scope="row">@(i + 1)</th>
                        <td>@Model.QuotaValue[i].ToString("C2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    let token = getCookie("session-token");
    if (token.length == 0) {
        window.location.href = "/home/";
    }

</script>